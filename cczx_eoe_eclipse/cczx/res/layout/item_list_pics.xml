                <!--/>-->
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14.0dip"
        android:paddingRight="14.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/list_line" />
</LinearLayout>