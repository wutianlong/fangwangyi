<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/news_list_height"
        android:paddingBottom="5dp"
        android:paddingLeft="14.0dip"
        android:paddingRight="14dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/list_image_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="时尚宽松大方康师傅康师傅上课"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/title"
                android:textSize="12sp"
                android:lines="2"
                android:text="上课上课都没考试的考试模上课上课都没考试的考试模上课上课都没考试的考试模上课上课都没考试的考试模"
                />
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14.0dip"
        android:paddingRight="14.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/list_line" />
</LinearLayout>